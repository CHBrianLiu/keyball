// just like what i have in vim
COMB(JK_ESC,         KC_ESC,       KC_J, KC_K)

// m and , is the first and the second mouse buttons,
// so they are the perfect fit to trigger the mouse layer.
// assume the mouse layer is the second layer
COMB(MComma_Mouse,   TO(2),    KC_M, KC_COMM)

// don't need to move my right hand too far to reach out
// to the top right corner.
COMB(OP_Minus,       KC_MINS,      KC_O, KC_P)

// like the one from above, but for the top left
COMB(QW_GRAV,        KC_GRV,       KC_Q, KC_W)

// Record and step recording the temp macro
// then replay the macro
COMB(Grav12_Rec,      DM_REC1,      KC_GRV, KC_1, KC_2)
COMB(Grav1_Replay,      DM_PLY1,      KC_GRV, KC_1)

